<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/main_bg_img"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_weight="0"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="13dp"
                android:layout_height="wrap_content"
                android:background="@mipmap/arrow_back"
                android:gravity="center" />
        </LinearLayout>

        <com.medicitadocter.custom.CustomTextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Doctor &amp; Staff"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"
            app:customFont="@string/font_regular"/>

        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivDot"
                android:layout_gravity="end|center"
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:background="@mipmap/dot" />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollIndicators="none"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/llOverview"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_5">

                    <com.medicitadocter.custom.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="start|center"
                        android:text="Practice Profile Overview"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_14"
                        app:customFont="@string/font_regular"/>

                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/dp_5"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivOverviewMinus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@mipmap/minus_white" />

                    </LinearLayout>
                </LinearLayout>

                <include layout="@layout/doc_practice_profile_overview" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/llOfficeLocations"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_5">

                    <com.medicitadocter.custom.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="start|center"
                        android:text="Office Locations"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_14"
                        app:customFont="@string/font_regular"/>

                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/dp_5"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivOfficeLocationsMinus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@mipmap/minus_white" />

                    </LinearLayout>
                </LinearLayout>

                <include layout="@layout/doc_practice_office_locations" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/llQualifications"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_5">

                    <com.medicitadocter.custom.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="start|center"
                        android:text="Qualification"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_14"
                        app:customFont="@string/font_regular"/>

                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/dp_5"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivQualificationsMinus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@mipmap/minus_white" />

                    </LinearLayout>
                </LinearLayout>

                <include layout="@layout/doc_practice_qualification" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>