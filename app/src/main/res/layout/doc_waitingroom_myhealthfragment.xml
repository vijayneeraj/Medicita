<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollIndicators="none"
    android:scrollbars="none"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llAddMedicationMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5">
            <LinearLayout
                android:id="@+id/llAddMedication"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/dp_5">

                <com.medicitadocter.custom.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="start|center"
                    android:text="Medical"
                    android:textColor="@color/white"
                    app:customFont="@string/font_regular"
                    android:textSize="@dimen/sp_14" />

                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivAddMedicationMinus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@mipmap/down_arrow_white" />

                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/doc_waitingroom_myhealth_medical" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llNetworkInsuranceSummaryMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:id="@+id/llNetworkInsuranceSummary"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:padding="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5">

            <com.medicitadocter.custom.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="start|center"
                android:text="Finish"
                app:customFont="@string/font_regular"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14" />

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivNetworkInsuranceSummaryMinus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:scaleX="1"
                    android:scaleY="1"
                    android:backgroundTint="@color/white"
                    android:background="@mipmap/up_arrow_white" />

            </LinearLayout>
        </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</ScrollView>