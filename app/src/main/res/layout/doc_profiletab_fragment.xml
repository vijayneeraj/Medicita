<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollIndicators="none"
    android:scrollbars="none"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.medicitadocter.custom.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:text="Book an appointment"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            android:background="@color/colorPrimary"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_margin="@dimen/dp_10">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:background="@mipmap/left_arrow"
                android:backgroundTint="@color/black_color"
                android:layout_weight="0"
                android:layout_margin="@dimen/dp_10"
                android:layout_gravity="center"/>

            <com.medicitadocter.custom.CustomTextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Today, Apr 25 "
                android:textColor="@color/black_color"
                android:textSize="@dimen/sp_18"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:background="@mipmap/right_arrow"
                android:backgroundTint="@color/black_color"
                android:layout_weight="0"
                android:layout_margin="@dimen/dp_10"
                android:layout_gravity="center"/>
        </LinearLayout>

        <com.medicitadocter.custom.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Next Availability : Tue Apr 25"
            android:background="@color/yellow"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/black_color"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            app:cardCornerRadius="@dimen/dp_5">
        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/darkness_gray"
            class="com.google.android.gms.maps.SupportMapFragment" />
        </android.support.v7.widget.CardView>
        <!--<fragment-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="120dp" />-->

        <com.medicitadocter.custom.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="51 E 25th St 4th Floor New York, NY 10010"
            android:background="@color/white"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/black_color"
            android:layout_marginTop="@dimen/dp_10"/>

    </LinearLayout>

</ScrollView>