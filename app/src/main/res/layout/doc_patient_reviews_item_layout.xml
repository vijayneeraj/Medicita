<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginRight="@dimen/dp_5"
    android:layout_marginLeft="@dimen/dp_5"
    android:layout_marginBottom="@dimen/dp_5"
    android:layout_marginTop="@dimen/dp_5"
    app:cardCornerRadius="@dimen/dp_5"
    android:elevation="@dimen/dp_20">

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <com.medicitadocter.custom.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="March 3,2017,"
            android:gravity="start|center"
            android:layout_gravity="center"
            app:customFont="@string/font_regular"
            android:textSize="@dimen/sp_14"
            android:padding="@dimen/dp_10"
            android:textColor="@color/black_color" />

        <com.medicitadocter.custom.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="by Darlene F., (Verified Patient)"
            android:gravity="start|center"
            android:layout_gravity="center"
            app:customFont="@string/font_regular"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/darkness_gray" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_5">

        <com.medicitadocter.custom.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Overall Rating"
            android:gravity="center"
            android:layout_gravity="center"
            app:customFont="@string/font_regular"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/black_color"
            android:layout_weight="1"/>

        <com.medicitadocter.custom.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bedside Manner"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="@dimen/sp_14"
            app:customFont="@string/font_regular"
            android:textColor="@color/black_color"
            android:layout_weight="1"/>

        <com.medicitadocter.custom.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wait Time"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="@dimen/sp_14"
            app:customFont="@string/font_regular"
            android:textColor="@color/black_color"
            android:layout_weight="1"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center">
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:isIndicator="true"
            android:rating="1"
            android:numStars="5"
            android:stepSize=".5"
            android:scaleX="1"
            android:scaleY="1"
            android:gravity="center"
            android:progressTint="@android:color/holo_red_dark"
            style="?android:attr/ratingBarStyleSmall"
            android:theme="@style/RatingBarRed" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center">
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:isIndicator="true"
            android:rating="2.5"
            android:numStars="5"
            android:stepSize=".5"
            android:scaleX="1"
            android:scaleY="1"
            android:gravity="center"
            android:progressTint="@android:color/holo_red_dark"
            style="?android:attr/ratingBarStyleSmall"
            android:theme="@style/RatingBarRed" />
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center">
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:isIndicator="true"
            android:rating="5"
            android:numStars="5"
            android:stepSize=".5"
            android:scaleX="1"
            android:scaleY="1"
            android:gravity="center"
            android:progressTint="@android:color/holo_red_dark"
            style="?android:attr/ratingBarStyleSmall"
            android:theme="@style/RatingBarRed" />
            </LinearLayout>

    </LinearLayout>

    <com.medicitadocter.custom.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/in_a_world_where"
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="@dimen/sp_14"
        android:padding="@dimen/dp_5"
        app:customFont="@string/font_regular"
        android:textColor="@color/darkness_gray"
        android:layout_marginBottom="@dimen/dp_10"/>

</LinearLayout>
</android.support.v7.widget.CardView>