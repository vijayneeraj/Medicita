<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/ivPatientProfilePic"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_70"
                android:scaleY="1"
                android:scaleX="1"
                android:background="@mipmap/user_circle" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_10"
            android:orientation="vertical">

            <com.medicitadocter.custom.CustomTextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daniel Nejat"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/black_color"
                app:customFont="@string/font_regular"
                android:layout_marginTop="@dimen/dp_5"/>
            <com.medicitadocter.custom.CustomTextView
                android:id="@+id/tvPhoneNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="(9001)-589-896"
                android:textColor="@color/black_color"
                app:customFont="@string/font_regular"
                android:textSize="@dimen/sp_10"/>
            <com.medicitadocter.custom.CustomTextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="daniel.nejat@gmail.com"
                android:textColor="@color/bleed_blue"
                app:customFont="@string/font_regular"
                android:textSize="@dimen/sp_10"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ivGender"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center"
                    android:scaleX="0.9"
                    android:scaleY="0.9"
                    android:background="@mipmap/male"/>
                <com.medicitadocter.custom.CustomTextView
                    android:id="@+id/tvGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:gravity="center"
                    app:customFont="@string/font_regular"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/sp_10"
                    android:layout_marginLeft="@dimen/dp_5"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <com.medicitadocter.custom.CustomTextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/yellow"
            android:gravity="center"
            android:text="Sep 21, 1988"
            android:textColor="@color/black_color"
            android:textSize="@dimen/sp_12"
            app:customFont="@string/font_regular" />

        <com.medicitadocter.custom.CustomTextView
            android:id="@+id/tvErolled"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Enrolled"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            android:background="@color/green"
            app:customFont="@string/font_regular"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>