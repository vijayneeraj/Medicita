<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_5"
    android:layout_marginRight="@dimen/dp_20">

    <ImageView
        android:id="@+id/ivChatBubbleProfilePic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@mipmap/user_circle"
        android:scaleX="1"
        android:scaleY="1"
        android:layout_alignParentLeft="true"
        android:layout_alignLeft="@+id/tvChatBubbleIncoming"/>

    <com.medicitadocter.custom.CustomTextView
        android:id="@+id/tvChatBubbleIncoming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp_50"
        android:background="@drawable/chat_bubble_outgoing_yellow"
        android:gravity="start|center"
        android:layout_gravity="center"
        android:textColor="@color/black_color"
        android:textSize="@dimen/sp_14"
        android:text="Do you see this Do you see this Do you see this Do you see this Do you see this Do you see this Do you see this Do you see this Do you see this Do you see this"
        android:paddingRight="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_20"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="46dp"
        tools:ignore="RtlCompat" />

    <com.medicitadocter.custom.CustomTextView
        android:id="@+id/tvChatBubbleTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start|center"
        android:layout_gravity="center"
        android:textColor="@color/darkness_gray"
        android:textSize="@dimen/sp_10"
        android:text="a mintues ago"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/tvChatBubbleIncoming"
        android:layout_alignLeft="@+id/tvChatBubbleIncoming"
        android:layout_alignStart="@+id/tvChatBubbleIncoming" />

</RelativeLayout>