<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/main_bg_img">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_weight="0"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="13dp"
                android:layout_height="wrap_content"
                android:background="@mipmap/arrow_back"
                android:gravity="center" />
        </LinearLayout>

        <com.medicitadocter.custom.CustomTextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Doctor &amp; Staff"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18" />

        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivDot"
                android:layout_gravity="end|center"
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:background="@mipmap/dot" />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollIndicators="none"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@android:color/transparent">

            <com.medicitadocter.custom.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Billing Information for Comprehensive OBGYN"
                android:textColor="@color/black_color"
                android:textSize="@dimen/sp_16"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_10">

                <com.medicitadocter.custom.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Payment Method"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/sp_16"
                    android:layout_marginTop="@dimen/dp_10"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_10">
                <com.medicitadocter.custom.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Business Checking ending in 3500."
                    android:textColor="@color/darkness_gray"
                    android:textSize="@dimen/sp_14"
                    android:layout_weight="0"/>

                    <com.medicitadocter.custom.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Update"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/sp_14"
                        android:layout_weight="0"/>
                </LinearLayout>

                <com.medicitadocter.custom.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+ Add Payment Method"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginTop="@dimen/dp_30"
                    android:layout_marginBottom="@dimen/dp_20"/>

            </LinearLayout>

            <com.medicitadocter.custom.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Your Invoices"
                android:textColor="@color/black_color"
                android:textSize="@dimen/sp_16"
                android:layout_marginTop="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_10"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_2"
            android:paddingLeft="@dimen/dp_10"
            android:background="@color/white"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvViewInvoices"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

            </android.support.v7.widget.RecyclerView>

            <include layout="@layout/doc_billing_invoices_item_layout"/>

            <include layout="@layout/doc_billing_invoices_item_layout"/>

            <include layout="@layout/doc_billing_invoices_item_layout"/>

            <include layout="@layout/doc_billing_invoices_item_layout"/>

            <include layout="@layout/doc_billing_invoices_item_layout"/>

            <include layout="@layout/doc_billing_invoices_item_layout"/>

            <include layout="@layout/doc_billing_invoices_item_layout"/>

            <include layout="@layout/doc_billing_invoices_item_layout"/>

            <include layout="@layout/doc_billing_invoices_item_layout"/>

            <include layout="@layout/doc_billing_invoices_item_layout"/>

            <include layout="@layout/doc_billing_invoices_item_layout"/>

            <include layout="@layout/doc_billing_invoices_item_layout"/>

            <include layout="@layout/doc_billing_invoices_item_layout"/>

            <include layout="@layout/doc_billing_invoices_item_layout"/>

            <include layout="@layout/doc_billing_invoices_item_layout"/>

            <include layout="@layout/doc_billing_invoices_item_layout"/>

            <include layout="@layout/doc_billing_invoices_item_layout"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>